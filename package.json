{
	"scripts": {
		"build:module": "lerna run build:module",
		"setup-dev": "npx lerna bootstrap --ignore-scripts",
		"lint": "run-s -c lint:*",
		"lint:dev": "standardx \"packages/*/src/**/!(*spec).ts\"",
		"lint:test": "standardx --env mocha \"packages/*/src/**/*spec.ts\"",
		"sample:inspect": "npm run --prefix fixtures/sample start",
    "sample:update": "npm run --prefix fixtures/sample update"
	},
	"devDependencies": {
		"eslint-plugin-typescript": "^0.14.0",
		"lerna": "^3.10.5",
		"npm-run-all": "^4.1.5",
		"standardx": "^3.0.1",
		"typescript": "3.2.2",
		"typescript-eslint-parser": "^21.0.2"
	},
	"standardx": {
		"parser": "typescript-eslint-parser",
		"plugins": [
			"typescript"
		]
	},
	"private": true,
	"name": "node-vibrant-monorepo"
}
